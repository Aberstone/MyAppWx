/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

div {
  display: block
}

h1 {
  font-size:2em;
  margin-block-start:0.67em;
  margin-block-end:0.67em;
  margin-inline-start:0px;
  margin-inline-end:0px;
  font-weight:bold;
  display:block;
}

h2 {
    display: block;
    font-size: 1.5em;
    margin-block-start: 0.83em;
    margin-block-end: 0.83em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
}

h3 {
    display: block;
    font-size: 1.17em;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
}

view,text,image,div,h1,h2,h3,h4,h5,h6,span,b,em {
  padding: 0;
  margin: 0;
}

a {
  color: #888;
  text-decoration: none;
}




